@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <div class="anix" data-continue="true" data-hold="400">
        <img src="~/img/rabbit.svg" height="200" class="anix" data-continue="true" data-hold="200"/>
        <h1 class="display-4">Welcome to FileRabbit</h1>
        <p>A completely new way to store and share files.</p>
        <form method="get" asp-controller="Folder" asp-action="Watch">
            <input type="hidden" value="@ViewBag.UserId" name="folderId">
            <input type="submit" value="Start working!" class="ui-startworking" />
        </form>
        
    </div>
</div>
